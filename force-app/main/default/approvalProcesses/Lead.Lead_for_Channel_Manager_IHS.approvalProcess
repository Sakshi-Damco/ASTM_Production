<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>IHSPartnerExecutive</submitter>
        <type>portalRole</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>IHSPartnerManager</submitter>
        <type>portalRole</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>IHSPartnerUser</submitter>
        <type>portalRole</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Number_of_Sites__c</field>
        <field>Address</field>
        <field>Company</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>PartnerLeadApproverIHS</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit it to Channel Manager for approval-IHS</label>
        <name>Submit_it_to_Channel_Manager_for_approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Lead_approval_template</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>CONTAINS($UserRole.Name,&quot;IHS&quot;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Send_email_to_Lead_Owner_that_Lead_was_approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_email_to_Lead_Owner</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Lead for Channel Manager-IHS</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>partner_portal_lead_approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
